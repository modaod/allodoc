<div class="consultation-form-container">
  <mat-card>
    <mat-card-header>
      <mat-card-title>
        {{ isEditMode ? 'Edit Consultation' : 'New Consultation' }}
      </mat-card-title>
      <mat-card-subtitle>
        {{ isEditMode ? 'Update consultation details' : 'Create a new consultation record' }}
      </mat-card-subtitle>
    </mat-card-header>

    <mat-card-content>
      <!-- Loading Spinner -->
      <div *ngIf="loading" class="loading-container">
        <mat-progress-spinner mode="indeterminate" diameter="50"></mat-progress-spinner>
      </div>

      <!-- Consultation Form -->
      <form *ngIf="!loading" [formGroup]="consultationForm" (ngSubmit)="onSubmit()" class="consultation-form">
        
        <mat-tab-group>
          <!-- Basic Information Tab -->
          <mat-tab label="Basic Information">
            <div class="tab-content">
              <div class="form-row">
                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Patient</mat-label>
                  <mat-select formControlName="patientId" required>
                    <mat-option *ngFor="let patient of patients" [value]="patient.id">
                      {{ patient.firstName }} {{ patient.lastName }} - {{ patient.patientNumber }}
                    </mat-option>
                  </mat-select>
                  <mat-error>{{ getFieldError('patientId') }}</mat-error>
                </mat-form-field>

                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Consultation Date & Time</mat-label>
                  <input matInput type="datetime-local" formControlName="consultationDate" required>
                  <mat-error>{{ getFieldError('consultationDate') }}</mat-error>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Type</mat-label>
                  <mat-select formControlName="type" required>
                    <mat-option *ngFor="let type of consultationTypes" [value]="type">
                      {{ type.replace('_', ' ') | titlecase }}
                    </mat-option>
                  </mat-select>
                  <mat-error>{{ getFieldError('type') }}</mat-error>
                </mat-form-field>

                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Status</mat-label>
                  <mat-select formControlName="status">
                    <mat-option *ngFor="let status of consultationStatuses" [value]="status">
                      {{ status.replace('_', ' ') | titlecase }}
                    </mat-option>
                  </mat-select>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Duration (minutes)</mat-label>
                  <input matInput type="number" formControlName="duration" min="5" max="480">
                  <mat-error>{{ getFieldError('duration') }}</mat-error>
                </mat-form-field>

                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Fee ($)</mat-label>
                  <input matInput type="number" formControlName="fee" min="0" max="10000" step="0.01">
                  <mat-error>{{ getFieldError('fee') }}</mat-error>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="full-width">
                  <mat-label>Chief Complaint</mat-label>
                  <textarea matInput formControlName="chiefComplaint" rows="3" required></textarea>
                  <mat-error>{{ getFieldError('chiefComplaint') }}</mat-error>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="full-width">
                  <mat-label>History of Present Illness</mat-label>
                  <textarea matInput formControlName="historyOfPresentIllness" rows="4"></textarea>
                </mat-form-field>
              </div>
            </div>
          </mat-tab>

          <!-- Vital Signs Tab -->
          <mat-tab label="Vital Signs">
            <div class="tab-content" formGroupName="vitalSigns">
              <div class="form-row">
                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Temperature (Â°C)</mat-label>
                  <input matInput type="number" formControlName="temperature" step="0.1" min="35" max="42">
                  <mat-error>{{ getFieldError('vitalSigns.temperature') }}</mat-error>
                </mat-form-field>

                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Heart Rate (BPM)</mat-label>
                  <input matInput type="number" formControlName="heartRate" min="30" max="220">
                  <mat-error>{{ getFieldError('vitalSigns.heartRate') }}</mat-error>
                </mat-form-field>
              </div>

              <div class="form-row">
                <div class="blood-pressure-group" formGroupName="bloodPressure">
                  <label>Blood Pressure (mmHg)</label>
                  <div class="bp-inputs">
                    <mat-form-field appearance="outline">
                      <mat-label>Systolic</mat-label>
                      <input matInput type="number" formControlName="systolic" min="70" max="300">
                    </mat-form-field>
                    <span class="bp-separator">/</span>
                    <mat-form-field appearance="outline">
                      <mat-label>Diastolic</mat-label>
                      <input matInput type="number" formControlName="diastolic" min="40" max="200">
                    </mat-form-field>
                  </div>
                </div>

                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Respiratory Rate (/min)</mat-label>
                  <input matInput type="number" formControlName="respiratoryRate" min="8" max="60">
                  <mat-error>{{ getFieldError('vitalSigns.respiratoryRate') }}</mat-error>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Oxygen Saturation (%)</mat-label>
                  <input matInput type="number" formControlName="oxygenSaturation" min="70" max="100">
                  <mat-error>{{ getFieldError('vitalSigns.oxygenSaturation') }}</mat-error>
                </mat-form-field>

                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Weight (kg)</mat-label>
                  <input matInput type="number" formControlName="weight" step="0.1" min="0.5" max="500">
                  <mat-error>{{ getFieldError('vitalSigns.weight') }}</mat-error>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Height (cm)</mat-label>
                  <input matInput type="number" formControlName="height" min="30" max="250">
                  <mat-error>{{ getFieldError('vitalSigns.height') }}</mat-error>
                </mat-form-field>

                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>BMI</mat-label>
                  <input matInput formControlName="bmi" readonly>
                  <mat-hint>Calculated automatically</mat-hint>
                </mat-form-field>
              </div>
            </div>
          </mat-tab>

          <!-- Physical Examination Tab -->
          <mat-tab label="Physical Examination">
            <div class="tab-content" formGroupName="physicalExamination">
              <div class="form-row">
                <mat-form-field appearance="outline" class="full-width">
                  <mat-label>General</mat-label>
                  <textarea matInput formControlName="general" rows="2"></textarea>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Cardiovascular</mat-label>
                  <textarea matInput formControlName="cardiovascular" rows="2"></textarea>
                </mat-form-field>

                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Respiratory</mat-label>
                  <textarea matInput formControlName="respiratory" rows="2"></textarea>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Gastrointestinal</mat-label>
                  <textarea matInput formControlName="gastrointestinal" rows="2"></textarea>
                </mat-form-field>

                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Neurological</mat-label>
                  <textarea matInput formControlName="neurological" rows="2"></textarea>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Musculoskeletal</mat-label>
                  <textarea matInput formControlName="musculoskeletal" rows="2"></textarea>
                </mat-form-field>

                <mat-form-field appearance="outline" class="form-field">
                  <mat-label>Dermatological</mat-label>
                  <textarea matInput formControlName="dermatological" rows="2"></textarea>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="full-width">
                  <mat-label>Other Findings</mat-label>
                  <textarea matInput formControlName="other" rows="3"></textarea>
                </mat-form-field>
              </div>
            </div>
          </mat-tab>

          <!-- Diagnosis Tab -->
          <mat-tab label="Diagnosis">
            <div class="tab-content">
              <div class="diagnosis-section">
                <div class="section-header">
                  <h4>Diagnoses</h4>
                  <button type="button" mat-button color="primary" (click)="addDiagnosis()">
                    <mat-icon>add</mat-icon>
                    Add Diagnosis
                  </button>
                </div>

                <div formArrayName="diagnosis">
                  <div *ngFor="let diagnosisGroup of diagnosis.controls; let i = index" 
                       [formGroupName]="i" class="diagnosis-item">
                    <mat-card>
                      <mat-card-content>
                        <div class="diagnosis-header">
                          <h5>Diagnosis {{ i + 1 }}</h5>
                          <button type="button" mat-icon-button color="warn" 
                                  (click)="removeDiagnosis(i)" matTooltip="Remove Diagnosis">
                            <mat-icon>delete</mat-icon>
                          </button>
                        </div>

                        <div class="form-row">
                          <mat-form-field appearance="outline" class="form-field">
                            <mat-label>ICD-10 Code</mat-label>
                            <input matInput formControlName="code">
                          </mat-form-field>

                          <mat-form-field appearance="outline" class="form-field">
                            <mat-label>Type</mat-label>
                            <mat-select formControlName="type">
                              <mat-option *ngFor="let type of diagnosisTypes" [value]="type">
                                {{ type.replace('_', ' ') | titlecase }}
                              </mat-option>
                            </mat-select>
                          </mat-form-field>
                        </div>

                        <div class="form-row">
                          <mat-form-field appearance="outline" class="form-field">
                            <mat-label>Description</mat-label>
                            <input matInput formControlName="description" required>
                          </mat-form-field>

                          <mat-form-field appearance="outline" class="form-field">
                            <mat-label>Severity</mat-label>
                            <mat-select formControlName="severity">
                              <mat-option *ngFor="let severity of diagnosisSeverities" [value]="severity">
                                {{ severity | titlecase }}
                              </mat-option>
                            </mat-select>
                          </mat-form-field>
                        </div>

                        <div class="form-row">
                          <mat-form-field appearance="outline" class="full-width">
                            <mat-label>Notes</mat-label>
                            <textarea matInput formControlName="notes" rows="2"></textarea>
                          </mat-form-field>
                        </div>
                      </mat-card-content>
                    </mat-card>
                  </div>

                  <div *ngIf="diagnosis.length === 0" class="no-diagnosis">
                    <mat-icon>info</mat-icon>
                    <p>No diagnoses added yet. Click "Add Diagnosis" to add a diagnosis.</p>
                  </div>
                </div>
              </div>
            </div>
          </mat-tab>

          <!-- Treatment & Notes Tab -->
          <mat-tab label="Treatment & Notes">
            <div class="tab-content">
              <div class="form-row">
                <mat-form-field appearance="outline" class="full-width">
                  <mat-label>Treatment Plan</mat-label>
                  <textarea matInput formControlName="treatmentPlan" rows="4"></textarea>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="full-width">
                  <mat-label>Follow-up Instructions</mat-label>
                  <textarea matInput formControlName="followUpInstructions" rows="3"></textarea>
                </mat-form-field>
              </div>

              <div class="form-row">
                <mat-form-field appearance="outline" class="full-width">
                  <mat-label>Additional Notes</mat-label>
                  <textarea matInput formControlName="notes" rows="4"></textarea>
                </mat-form-field>
              </div>
            </div>
          </mat-tab>
        </mat-tab-group>

        <!-- Form Actions -->
        <div class="form-actions">
          <button type="button" mat-button (click)="onCancel()">Cancel</button>
          <button type="submit" mat-raised-button color="primary" [disabled]="consultationForm.invalid || saving">
            <mat-progress-spinner *ngIf="saving" mode="indeterminate" diameter="20"></mat-progress-spinner>
            <span *ngIf="!saving">{{ isEditMode ? 'Update Consultation' : 'Create Consultation' }}</span>
            <span *ngIf="saving">{{ isEditMode ? 'Updating...' : 'Creating...' }}</span>
          </button>
        </div>
      </form>
    </mat-card-content>
  </mat-card>
</div>

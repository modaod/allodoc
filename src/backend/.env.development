# =================================
# DEVELOPMENT ENVIRONMENT
# =================================
# This file is for local development only
# Never use these settings in production!

# =================================
# APPLICATION
# =================================
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=v1

# =================================
# DATABASE - Development
# =================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=dev_user
DATABASE_PASSWORD=dev_password_123
DATABASE_NAME=dev_db
DATABASE_SSL=false
DATABASE_SYNCHRONIZE=true  # Auto-sync entities in development
DATABASE_LOGGING=true      # Enable query logging
DATABASE_POOL_SIZE=10

# =================================
# JWT CONFIGURATION
# =================================
JWT_ACCESS_SECRET=dev-access-secret-key-not-for-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-not-for-production
JWT_ACCESS_EXPIRATION=1d   # Longer for development convenience
JWT_REFRESH_EXPIRATION=30d

# =================================
# SECURITY
# =================================
BCRYPT_ROUNDS=10           # Lower rounds for faster development
SESSION_SECRET=dev-session-secret-not-secure
COOKIE_SECRET=dev-cookie-secret-not-secure

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_TTL=60          # Time window in seconds
RATE_LIMIT_LIMIT=100       # Max requests per window (relaxed for dev)

# =================================
# CORS
# =================================
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# =================================
# DEVELOPMENT SEED USER
# =================================
SEED_ADMIN_EMAIL=admin@allodoc.dev
SEED_ADMIN_PASSWORD=Admin123!
SEED_ADMIN_FIRST_NAME=Admin
SEED_ADMIN_LAST_NAME=Developer

# =================================
# LOGGING
# =================================
LOG_LEVEL=debug
LOG_FORMAT=dev  # Pretty print for development

# =================================
# FEATURES FLAGS
# =================================
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false
ENABLE_DEBUG_MODE=true
# =================================
# ENVIRONMENT TEMPLATE
# =================================
# Copy this file to .env.development or .env.production
# and fill in the appropriate values
#
# For development: cp .env.example .env.development
# For production: cp .env.example .env.production

# =================================
# APPLICATION
# =================================
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=v1

# =================================
# DATABASE
# =================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_db_name
DATABASE_SSL=false
DATABASE_SYNCHRONIZE=false  # Set to true ONLY in development
DATABASE_LOGGING=false
DATABASE_POOL_SIZE=10

# =================================
# JWT CONFIGURATION
# =================================
# Generate secrets with: openssl rand -hex 64
JWT_ACCESS_SECRET=your-access-secret-key
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# =================================
# SECURITY
# =================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
COOKIE_SECRET=your-cookie-secret

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10

# =================================
# CORS
# =================================
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# =================================
# SEED USER
# =================================
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=ChangeMe123!
SEED_ADMIN_FIRST_NAME=Admin
SEED_ADMIN_LAST_NAME=User

# =================================
# LOGGING
# =================================
LOG_LEVEL=info
LOG_FORMAT=json

# =================================
# FEATURES FLAGS
# =================================
ENABLE_SWAGGER=true
ENABLE_DEBUG_MODE=false